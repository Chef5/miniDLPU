/* pages/more/more.wxss */
page{
  width: 100%;
  height: 100%;
}
nav
.page{
  background-color: #efeff4;
  height: 100%;
}
.page__hd{
  width: 100%;
}
.pic{
  width: 100%;
  height: 100%;
}
.menu-body{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menu-title{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 10rpx;
}
.menu-title-txt{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
  font-size: 32rpx;
  color: #515151;
}
.menu-items{
  display: flex;
  flex-direction: row;
  width: 650rpx;
  height: auto;
}
.menu-item-box{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  height: 120rpx;
}
.nav-item{
  display: flex;
  width: 100%;
  height: 150rpx;
}
.menu-item-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
  width: 90%;
  margin-left: 2%;
  height: 100%;
  background-color: rgba(255, 140, 80, 0.8);
  border: 1px solid white;
}
.menu-items-img{
  margin-top: 22rpx;
}
.menu-items-img image{
  width: 45rpx;
  height: 45rpx;
}
.menu-items-txt{
  margin-top: -5rpx;
  font-size: 24rpx;
  color: #515151;
}
.share-box{
  margin-top: 520rpx;
  font-size: 28rpx;
  color: gray;
  text-align: center;
}