.mask{
  transition: all 300ms linear;
  width:304rpx;
  /* height:620rpx; */
  position:absolute;
  background-color:#efeff4;
  z-index:2;
  top:90rpx;
  right: 0rpx;
  opacity:1;
  border-left: 2rpx dashed #1298CF;
  border-bottom: 2rpx dashed #1298CF;
}
.mask-fill{
  width: 20rpx;
  color: black;
  background-color: #efeff4;
  font-size: 24rpx;
  line-height: 70rpx;
  text-align: center;
}
.th-right,.th-left{
  margin-top: 15rpx;
  width: 10rpx;
  height: 40rpx;
}


/*天气弹窗*/
.popup__content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  background: #FFFFFF;
}
.m-tq-top{
  height: 40rpx;width: 100%;
}
.m-tq-con{
  height: 160rpx;width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.m-tq-top view{
  width: 100%;text-align: center;font-size: 30rpx;font-weight: 700; border-bottom: 1px solid grey;
}
.m-tq-con-item{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
}
.m-tq-con-item-day{
  width: 80%;text-align: center;font-size: 24rpx;
  border-bottom: 1px solid grey;
  padding-top: 8rpx;
  padding-bottom: 2rpx;
}
.m-tq-con-item-main{
  display: flex;
  flex-direction: row;
  width: 70%;
}
.m-tq-con-item-main-img{
  display: flex;flex-direction: row;flex: 1;justify-content: center;padding-left: 20rpx;
  padding-top: 10rpx;
}
.m-tq-con-item-main-img image{
  width: 60rpx;height: 60rpx;
}
.m-tq-con-item-main-text{
  display: flex;flex-direction: column;flex: 1;font-size: 26rpx;
  padding-top: 4rpx;text-align: center;
}
.m-tq-con-item-main-text-disc .m-tq-con-item-main-text-temp{
  flex: 1;
}

