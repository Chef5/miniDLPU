}
.logo-dis{
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 28rpx;
}
.logo-dis image{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
}
.set-items{
  margin-top: 50rpx;
}
.showmsg{
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: gainsboro;
}
.jinji{
  color: red;
  font-size: 40rpx;
}
.weui-cell__bd text{
  font-size: 22rpx;color: gray;
}

/*swtich整体大小及背景色*/
.wx-switch-input{
    width:79rpx !important;
    height:36rpx !important;
    background: #1298CF !important;
    border: #1298CF !important; 
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:80rpx !important;
    height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 42rpx !important;
    height: 36rpx !important;
}

.text-server{
  font-size: 28rpx !important;
  color: rgb(233, 53, 53) !important;
  font-weight: 700 !important;
}
.btn-switch{
  font-size: 32rpx;
  line-height: 48rpx;
  font-weight: 600;
  color: #1298CF;
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 0px;
  padding-bottom: 0px;
}
.btn-contact{
  font-size: 38rpx;
  margin-top: 50rpx;
  color: white;
  background-color: #1298CF;
  width: 60%;
}