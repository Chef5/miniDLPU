.i-noticebar{display:flex;height:60rpx;line-height:60rpx;font-size:14px;color:#f76a24;background-color:#fefcec;overflow:hidden;z-index: 99;opacity: 0.7;position: absolute;width: 100%;}
.i-noticebar-icon{display:flex;margin-left:10rpx;align-items:center}
.i-noticebar-icon+view{margin-left:10rpx}
.i-noticebar-operation{display:flex;margin-right:16rpx;align-items:center}
.i-noticebar-content-wrap{position:relative;flex:1;margin:0 10rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}
.i-noticebar-content-wrap .i-noticebar-content{position:absolute;transition-duration:20s;font-size: 28rpx;}